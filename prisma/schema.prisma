generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Task {
    id          String   @id @default(uuid())
    title       String
    description String
    status      String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@map("tasks")
}
